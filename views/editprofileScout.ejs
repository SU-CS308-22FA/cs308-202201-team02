      <div class="container">

      <div class="container" style="margin: 0 auto;">
        <form action="/editProfileScout" method="POST" class="form" id="form">


          <div class="form-control">
            <br />
            <div style="display: flex; flex-direction: row">
              <label for="username" style="width: 130px; margin-top: 10px">Username</label>
              <input id="username_field" type="text" placeholder="Please enter your name" name="username" required />
              <i class="fa fa-user-o" aria-hidden="true"></i>
              <i class="fas fa-check-circle"></i>
              <i class="fas fa-exclamation-circle"></i>
            </div>
            <small>Error message</small>
          </div>

          <div class="form-control">
            <div style="display: flex; flex-direction: row">
              <label for="email" style="width: 130px; margin-top: 10px">Email</label>
              <input id="email_field" type="email" placeholder="eg. email@address.com" name="email" required />
              <i class="fas fa-check-circle"></i>
              <i class="fas fa-exclamation-circle"></i>
            </div>
            <small>Error message</small>
          </div>

          <div class="form-control">
            <div style="display: flex; flex-direction: row">
              <label for="password" style="width: 130px; margin-top: 10px">Password</label>
              <input id="password_field" type="password" placeholder="*******" name="password" required />
              <i class="fas fa-check-circle"></i>
              <i class="fas fa-exclamation-circle"></i>
            </div>
            <small>Error message</small>
          </div>


        <div class="form-control">
          <div style="display: flex; flex-direction: row">
            <label for="biographydescription" style="width: 130px; margin-top: 10px">Biography</label>
            <input id="biographydescriptionField"  placeholder="Add description" name="biographydescription" />
            <i class="fas fa-check-circle"></i>
            <i class="fas fa-exclamation-circle"></i>
          </div>

        </div>
          <button>Save</button>
        </form>
      </div>
    </div>

    <script src="js/profilePageEdit.js"></script>

