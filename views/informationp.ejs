    </div>

    <div class="profile-page">

      <div class="page-header header-filter" data-parallax="true"></div>
      <div class="main main-raised">
        <div class="profile-content">
          <div class="container">
            <div class="row">
              <div class="col-md-6 ml-auto mr-auto">
                <div class="profile">
                  <div class="avatar">
                    <img src="https://i.pinimg.com/236x/d9/d8/8e/d9d88e3d1f74e2b8ced3df051cecb81d.jpg" alt="Avatar"
                      class="avatar">
                  </div>
                  <div class="name">
                    <h3 class="title" id="nameField"> Name </h3>
                    <h6>Striker</h6>
                  </div>
                </div>
              </div>
            </div>
            <% if (user.role === "scout" ){%>
            <div class="description text-center">
              <p>Football Player. 18 years old. I love football</p>

            </div>
<%}%>
            <div class="row">
              <div class="col-md-6 ml-auto mr-auto">
                <div class="profile-tabs">
                  <ul class="nav nav-pills nav-pills-icons justify-content-center" role="tablist">
                    <li class="nav-item">
                    <% if (user.role === "basic" ){%>

                      <div class="navigation-search-container">
                        <form action="/profilep" method="GET" class="form" id="form">
                          <input id="username_field" type="text" placeholder="Please enter username" name="username" required />
                          <button > Search </button>
                          <a class="nav-link" data-toggle="tab">
                           <i class="material-icons">videocam</i>
                            Videos
                          </a>
                            </form>
                      </div>
                      <% } %>

                    </li>

                    <li class="nav-item">

                      <a class="nav-link active" href="#" role="tab" data-toggle="tab">
                        <i class="material-icons">ballot</i>
                        Information
                      </a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>

            <!--

            -->

            <br>
            <br>

            <center>
              <h2>Information Table</h2>
            </center>
            <% if (user.role === "basic" ){%>
            <br>
            <br>

            <center>
                <div>

                    <form action="/information" method="POST" class="form" id="form">
                      <table>

                        <tr>
                          <td><label for="fullName">
                                  Full Name
                              </label>
                          </td>
                          <td>  <p type="text" id="fullName" ></p></td>

                      </tr>
                      <tr>
                          <td><label for="height">
                                  Height
                              </label>
                          </td>
                          <td>  <p type="text" id="height" ></p></td>
                      </tr>
                      <tr>
                        <td><label for="weight">
                                Weight
                            </label>
                        </td>
                        <td>  <p type="text" id="weight" ></p></td>
                    </tr>
                    <tr>
                      <td><label for="nationality">
                              Nationality
                          </label>
                      </td>
                      <td>  <p type="text" id="nationality" ></p></td>
                  </tr>
                  <tr>
                    <td><label for="foot">
                            Foot
                        </label>
                    </td>
                    <td>  <p type="text" id="foot" ></p></td>
                </tr>
                <tr>
                  <td><label for="main_Position">
                          Main Position
                      </label>
                  </td>
                  <td>  <p type="text" id="main_Position" ></p></td>
              </tr>
                  <tr>
                    <td><label for="pace">
                            Pace
                        </label>
                    </td>
                    <td>  <p type="text" id="pace" ></p></td>
                </tr>
                    </table>
                      <br>
                      <br>


                  </form>

                </div>




            </center>


 <% } %>
  <% if (user.role === "scout" ){%>
 <center>
     <div>
         <form action="/informationScout" method="POST" class="form" id="form">
             <table>
                 <tr>
                   <td><label for="age"> Age </label></td>
                   <td><p type="text" id="age" ></p></td>
                 </tr>
                 <tr>
                   <td><label for="club"> Club </label></td>
                   <td><p type="text" id="club" ></p></td>
                 </tr>
                 <tr>
                     <td><label for="scoutposition"> Position/Role </label></td>
                     <td><p type="text" id="scoutposition" ></p></td>
                 </tr>
               </table>
               <style>
                 table, th, td {
                     border: 2px solid #245b16;
                 }
                 th, td {
                     padding-top: 10px;
                     padding-bottom: 20px;
                     padding-left: 30px;
                     padding-right: 40px;
                 }
                 </style>
           <br>
           <br>
       </form>

     </div>

 </center>
