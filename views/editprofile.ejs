      <div class="container">

        <form action="/editProfile" method="POST" class="form" id="form">

          
          <div class="form-control">
            <br />
            <div style="display: flex; flex-direction: row">
              <label for="username" style="width: 130px; margin-top: 10px">Username</label>
              <input id="username_field" type="text" placeholder="Please enter your name" name="username" required />
              <i class="fa fa-user-o" aria-hidden="true"></i>
              <i class="fas fa-check-circle"></i>
              <i class="fas fa-exclamation-circle"></i>
            </div>
            <small>Error message</small>
          </div>

          <div class="form-control">
            <div style="display: flex; flex-direction: row">
              <label for="email" style="width: 130px; margin-top: 10px">Email</label>
              <input id="email_field" type="email" placeholder="eg. email@address.com" name="email" required />
              <i class="fas fa-check-circle"></i>
              <i class="fas fa-exclamation-circle"></i>
            </div>
            <small>Error message</small>
          </div>

          <div class="form-control">
            <div style="display: flex; flex-direction: row">
              <label for="password" style="width: 130px; margin-top: 10px">Password</label>
              <input id="password_field" type="password" placeholder="*******" name="password" required />
              <i class="fas fa-check-circle"></i>
              <i class="fas fa-exclamation-circle"></i>
            </div>
            <small>Error message</small>
          </div>

         <div class="form-control">
          <div style="display: flex; flex-direction: row">
            <label for="username" style="width: 130px; margin-top: 10px"
              >Phone Number</label
            >
            <input
              type="text" placeholder="eg. 05xx xxx xx xx"
              name="phone" required
            />
            <i class="fas fa-check-circle"></i>
            <i class="fas fa-exclamation-circle"></i>
          </div>
          <small>Error message</small>
        </div>

          <div  class="form-control" >
            <div style="display: flex; flex-direction: row">
              <label for="messageedit" style="width: 130px; margin-top: 10px"
                > message </label 
                >
              <input
                type="text" placeholder="I love football" 
                name="message" required
              />
      
            </div>
            
          </div>

          <button>Save</button>
        </form>
      </div>
    </div>

